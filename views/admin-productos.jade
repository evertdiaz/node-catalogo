              // .site-header-collapsed-in
            // .site-header-collapsed
          // site-header-content-in
        // .site-header-content
      // .container-fluid
    // .site-header
    .mobile-menu-left-overlay
    nav.side-menu
      ul.side-menu-list
        li.blue-dirty
          a(href='/admin/productos')
            span.glyphicon.glyphicon-th
            span.lbl Productos
        li.magenta.with-sub
          a(href='/admin/categorias')
            span.glyphicon.glyphicon-list-alt
            span.lbl Categorías
        li.brown.with-sub
          a(href='/admin/promociones')
            span.glyphicon.glyphicon-list
            span.lbl Promociones
        li.orange-red.with-sub
          a(href='/admin/ayuda')
            i.font-icon.font-icon-help
            span.lbl Ayuda
      section
        header.side-menu-title Enlaces de Interés
        ul.side-menu-list
          li
            a(target='_blank', href='http://joyeriaquisuruco.com')
              i.tag-color.green
              span.lbl Mi Web
          li
            a(target='_blank', href='http://devs.com.pe')
              i.tag-color.grey-blue
              span.lbl Devs Pagina Web
          li
            a(target='_blank', href='https://facebook.com/devsimagendigital')
              i.tag-color.blue
              span.lbl Devs Fanpage
    // .side-menu
    .page-content
      .container-fluid
        header.section-header
          .tbl
            .tbl-row
              .tbl-cell
                h2 Productos
                .subtitle Sección para gestionar productos de su catálogo
        section.card
          .card-block
            table#example.display.table.table-striped.table-bordered(cellspacing='0', width='100%')
              thead
                tr
                  th Nombre
                  th Descripción
                  th Categoría
                  th Colores
                  th Precio
                  th Editar
              tfoot
                tr
                  th Nombre
                  th Descripción
                  th Categoría
                  th Colores
                  th Editar
              tbody
                each thing in data
                  tr
                    td= thing.nombre
                    td= thing.descripcion
                    td= thing.categoria
                    td= thing.colores
                    td S/. #{thing.precio}
                    td
                      a(href='producto/editar/#{thing._id}') Editar
      // .container-fluid
    // .page-content
    .control-panel-container
      ul
        li.tasks
          .control-item-header
            a.icon-toggle
              span.caret-down.fa.fa-caret-down
              span.icon.fa.fa-tasks
            span.text Buscar por Categoría
          .control-item-content
            each thing in data2
              .control-item-content-text
                a(href='productos/categoria/#{thing.nombre}')= thing.nombre
        li.add
          .control-item-header
            a.icon-toggle.no-caret(href='producto/nuevo')
              span
              span.icon.fa.fa-plus
            span.text
              | Añadir Nuevo Producto
      a.control-panel-toggle
        span.fa.fa-angle-double-left
