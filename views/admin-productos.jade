  body.with-side-menu.control-panel.control-panel-compact
    header.site-header
      .container-fluid
        a.site-logo(href='/admin/home')
          img.hidden-md-down(src='img/logo-2.png', alt='')
          img.hidden-lg-up(src='img/logo-2-mob.png', alt='')
        button#show-hide-sidebar-toggle.show-hide-sidebar
          span toggle menu
        button.hamburger.hamburger--htla
          span toggle menu
        .site-header-content
          .site-header-content-in
            .site-header-shown
              .dropdown.user-menu
                button#dd-user-menu.dropdown-toggle(type='button', data-toggle='dropdown', aria-haspopup='true', aria-expanded='false')
                  img(src='img/avatar-2-64.png', alt='')
                .dropdown-menu.dropdown-menu-right(aria-labelledby='dd-user-menu')
                  a.dropdown-item
                    span.font-icon.glyphicon.glyphicon-user
                    | Frank Quisuruco
                  .dropdown-divider
                  a.dropdown-item(href='#')
                    span.font-icon.glyphicon.glyphicon-log-out
                    | Salir
              button.burger-right(type='button')
                i.font-icon-menu-addl
            // .site-header-shown
            .mobile-menu-right-overlay
            .site-header-collapsed
              .site-header-collapsed-in
                .dropdown.dropdown-typical
                  .dropdown-menu(aria-labelledby='dd-header-sales')
                    a.dropdown-item(href='#')
                      span.font-icon.font-icon-home
                      | Quant and Verbal
                    a.dropdown-item(href='#')
                      span.font-icon.font-icon-cart
                      | Real Gmat Test
                    a.dropdown-item(href='#')
                      span.font-icon.font-icon-speed
                      | Prep Official App
                    a.dropdown-item(href='#')
                      span.font-icon.font-icon-users
                      | CATprer Test
                    a.dropdown-item(href='#')
                      span.font-icon.font-icon-comments
