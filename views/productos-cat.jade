doctype html
html(lang='en')
  head
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(charset='UTF-8')
    meta(name='description', content='Joyería Quisuruco te brinda las mejores opciones en joyas y accesorios.')
    meta(name='keywords', content='joyeria, joyas, anillos, collares')
    meta(property='og:title', content='Joyería Quisuruco')
    meta(property='og:image', content='/images/logo.png')
    title Productos
    link(rel='stylesheet', type='text/css', href='../css/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='../css/font-awesome.min.css')
    link(rel='stylesheet', type='text/css', href='../css/owl.carousel.css')
    link(rel='stylesheet', type='text/css', href='../css/chosen.css')
    link(rel='stylesheet', type='text/css', href='../css/lightbox.min.css')
    link(rel='stylesheet', type='text/css', href='../css/pe-icon-7-stroke.css')
    link(rel='stylesheet', type='text/css', href='../css/jquery.mCustomScrollbar.css')
    link(rel='stylesheet', type='text/css', href='../css/magnific-popup.css')
    link(rel='stylesheet', type='text/css', href='../css/style.css')
    link(rel='stylesheet', type='text/css', href='http://fonts.googleapis.com/css?family=Montserrat')
    link(href='https://fonts.googleapis.com/css?family=Playfair+Display:400italic,400,700,700italic,900,900italic', rel='stylesheet', type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Roboto:300,100,100italic,300italic,400,400italic,500,500italic,700,700italic,900,900italic', rel='stylesheet', type='text/css')
  body
    #box-mobile-menu.box-mobile-menu.full-height.full-width
      .box-inner
        span.close-menu
          span.icon.pe-7s-close
    #header-ontop.is-sticky
    header#header.header.style3
      .main-menu-wapper
        .row
          .col-sm-12.col-md-12.menu-wapper
            .top-header(style='padding-top:0px')
              span.mobile-navigation
                i.fa.fa-bars
              .col-sm-4
                br
              .col-sm-4.col-md-4.logo-wapper(style='text-align:center')
                .logo(style='padding-top:2px')
                  a(style='text-align:center', href='#')
                    img(src='../images/logos/logo.svg', alt='')
            .col-sm-12(style='text-align:center')
              ul.boutique-nav.main-menu.clone-main-menu
                li.menu-item-has-children.item-megamenu
                  a(href='/') Inicio
                li.menu-item-has-children
                  a(href='/quienes-somos') Quisuruco
                li.active.menu-item-has-children
                  a(href='/productos') Productos
                li.menu-item-has-children
                  a(href='/promociones') Promociones
                li.menu-item-has-children
                  a(href='/contactanos') Contacto
    .main-container.shop-with-banner.left-slidebar
      .block-paralax3(style="background-image: url('../images/subscribe.jpg');background-repeat:no-repeat;margin-top:0px")
        .container
          .row
            .col-sm-12.col-md-3
              br
            // Añadir un fondo con transparencia
            .col-sm-12.col-md-9(style='text-align:left')
              h1 PRODUCTOS
      .container(style='margin-top:50px')
        .breadcrumbs.style2
          a(href='/') Inicio
          span Productos
        .row
          .main-content.col-sm-8.col-md-9
            .shop-top
              .shop-top-left
                //span.woocommerce-result-count Showing 1-9 of 2268 results
            ul.product-list-grid.desktop-columns-3.tablet-columns-2.mobile-columns-1.row.flex-flow
              each thing in data
                li.product-item.style4.col-sm-6.col-md-4
                  .product-inner
                    .product-thumb.has-back-image
                      a(href='#')
                        img(src='#{thing.img}', alt='')
                      a.back-image(href='#')
                        img(src='#{thing.img}', alt='')
                      .add-cart-wapper
                        a.button.add_to_cart_button= thing.descripcion
                        br
                        a.button.add_to_cart_button(href='contactanos') Pedir
                    .product-info
                      h3.product-name
                        a(href='#')= thing.nombre
                      span.price
                        ins S/#{thing.precio}
                      span.price
                        ins Colores: #{thing.colores}

            //
              <div class="navigation">
              <ul>
              <li><a href="#"><i class="fa fa-long-arrow-left"></i></a></li>
              <li><a href="#">1</a></li>
              <li class="active"><a href="#">2</a></li>
              <li><a href="#">3</a></li>
              <li><a href="#"><i class="fa fa-long-arrow-right"></i></a></li>
              </ul>
              </div>
          .col-sm-4.col-md-3.sidebar
            // Product category
            .widget.widget_product_categories
              h2.widget-title Categories
              ul.product-categories
                each thing1 in data2
                  li
                    a(href='/productos/categoria/#{thing1.nombre}')= thing1.nombre
            // ./Product category
    footer.footer(style='padding-bottom:25px')
      .footer-top
        .container
          .row.flex-flow(style='color:white')
            .col-sm-1
              br
            .col-sm-3(style='text-align:center;margin-top:20px')
              | Av. Prueba 123, Lima
            .col-sm-4(style='text-align:center')
              img(src='../images/logos/isotipo.svg', width='100px', alt='')
            .col-sm-3(style='text-align:center;margin-top:20px')
              | (01) 123 4567
            .col-sm-1
              br
            .col-sm-12(style='text-align:center')
              br
              a(href='http://devs.com.pe', target='_blank', style='font-size:10px;color:white') Diseñado por DEVS
    a.scroll_top(href='#', title='Scroll to Top', style='display: block;')
      i.fa.fa-arrow-up
