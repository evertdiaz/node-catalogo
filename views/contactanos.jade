      .block-paralax3(style="background-image: url('../images/subscribe.jpg');background-repeat:no-repeat;margin-top:0px")
        .container
          .row
            // Añadir un fondo con transparencia
            .col-sm-12.col-md-9(style='text-align:left')
              h1 CONTACTANOS
    .container(style='margin-top:50px;margin-bottom:25px')
      .row
        .col-md-2
          br
        .col-sm-12.col-md-8(style='text-align:center')
          h2 ESCRÍBENOS
          form
            input(type='text', placeholder='Nombre')
            br
            input(type='text', placeholder='Correo')
            br
            input(type='text', placeholder='Numero')
            br
            input(type='text', placeholder='Producto de Interes')
            br
            input(type='textarea', placeholder='Mensaje')
            br
            input(type='submit')
          br
          br
          img(src='http://facebook.com/logo.png')
          h3 970 412 625 / 952 164 828 / 978 466 950
          i.fa.fa-facebook
          i.fa.fa-twitter
          i.fa.fa-instagram
    footer.footer
      .footer-top
        .container
          .row.flex-flow(style='color:white')
            .col-sm-1
              br
            .col-sm-3(style='text-align:center')
              | Av. Prueba 123, Lima
            .col-sm-4(style='text-align:center')
              strong  QUISURUCO 
            .col-sm-3(style='text-align:center')
              | (01) 123 4567
            .col-sm-1
              br
            .col-sm-12(style='text-align:center')
              br
              a(href='http://devs.com.pe') Diseñado por DEVS
